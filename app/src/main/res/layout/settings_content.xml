<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/settings_app_bar"
    tools:context=".activities.settings.view.SettingsActivity">

    <include layout="@layout/settings_select_unit"
        android:id="@+id/settings_unit_energy"/>
    <include layout="@layout/settings_select_unit"
        android:id="@+id/settings_unit_mass" />
    <include layout="@layout/settings_select_unit"
        android:id="@+id/settings_unit_volume" />

</LinearLayout>