<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="?listPreferredItemHeight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <TableRow tools:ignore="UselessParent"
            android:gravity="center">
            <android.support.v7.widget.CardView
                android:id="@+id/add_meal_ingredient_image_container"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp">
                    <ImageView
                        android:id="@+id/add_meal_ingredient_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_fork_and_knife_wide"
                        android:contentDescription="@string/add_meal_ingredient_photo_description"/>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/add_meal_ingredient_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="false"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textSize="16sp"
                    tools:text="Example ingredient name"/>
                <TextView
                    android:id="@+id/add_meal_ingredient_energy_density"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="false"
                    tools:text="400 kcal / 100 g"/>
                <TextView
                    android:id="@+id/add_meal_ingredient_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="false"
                    tools:text="40 g"/>
            </LinearLayout>
            <android.support.v4.widget.Space android:layout_width="8dp"/>
            <TextView
                android:id="@+id/add_meal_ingredient_calorie_count"
                android:textIsSelectable="false"
                android:textSize="18sp"
                android:textColor="?colorAccent"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                tools:text="160 kcal"/>
        </TableRow>
    </TableLayout>
</android.support.v7.widget.CardView>