<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tags_item_content"
    android:background="@color/colorBackground"
    android:gravity="center"
    >
    <LinearLayout
        android:id="@+id/tag_item_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:paddingLeft="@dimen/group_card_view_horizontally_borderless_horizontal_padding"
        android:paddingRight="@dimen/group_card_view_horizontally_borderless_horizontal_padding"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_margin="0dp">
        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tags_checkbox"
            app:buttonTint="@color/checkbox_selector"
            android:enabled="false"
            android:button="@drawable/ic_check_circle_black_48dp"/>

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tags_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"
            style="@style/Base.TextAppearance.AppCompat"
            android:textSize="16sp"
            android:layout_weight="1"
            tools:text="My tag name"/>

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tags_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            tools:text="(16)"/>
    </LinearLayout>

    <View android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/default_separator"/>

</LinearLayout>