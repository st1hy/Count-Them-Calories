<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/colorPrimary"
    android:orientation="horizontal">

    <com.github.st1hy.countthemcalories.core.tokensearch.view.TokenSearchView
        android:id="@+id/ingredients_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorPrimaryInverse"
        android:textColorHint="?android:textColorSecondaryInverse"
        android:hint="@string/search_hint"
        android:layout_weight="1"
        android:visibility="gone"
        android:theme="@style/AppTheme" />

    <ImageButton
        android:id="@+id/ingredients_search_expand"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:tint="@color/colorBackground"
        android:contentDescription="@string/ingredients_search_title"
        android:src="@drawable/ic_search_24px"/>

    <ImageButton
        android:id="@+id/ingredients_search_collapse"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:tint="@color/colorBackground"
        android:visibility="gone"
        android:contentDescription="@string/ingredients_search_title"
        android:src="@drawable/ic_clear_24px"/>

</LinearLayout>