<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.addmeal.AddMealActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/add_meal_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <EditText
                android:id="@+id/add_meal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="Breakfast"
                android:inputType="textCapSentences"
                android:lines="1"
                android:maxLines="1"
                android:textSize="20sp">

                <requestFocus />
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="48dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical|bottom"
                    android:text="@string/ingredients_title"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/add_meal_total_calories"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/text_background_dark_rounded"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:textColor="?android:textColorPrimaryInverse"
                    android:textIsSelectable="false"
                    android:textSize="14sp"
                    tools:text="Total: 250 kcal" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/group_card_view_horizontally_borderless_elevation"
            android:layout_marginLeft="@dimen/group_card_view_horizontally_borderless_margin"
            android:layout_marginRight="@dimen/group_card_view_horizontally_borderless_margin"
            app:cardUseCompatPadding="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/add_meal_ingredients_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/add_meal_ingredient_item" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/add_meal_empty_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <Button
                android:id="@+id/add_meal_button_add_ingredient"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeight"
                android:text="@string/add_meal_button_add_ingredient" />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>