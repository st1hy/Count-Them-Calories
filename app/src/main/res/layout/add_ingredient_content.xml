<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.addmeal.view.AddMealActivity"
    tools:showIn="@layout/add_ingredient_activity">

    <LinearLayout
        android:id="@+id/add_meal_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <ImageButton
                android:id="@+id/add_ingredient_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorBackground"
                android:contentDescription="@string/add_meal_photo_description"
                android:scaleType="centerInside"
                android:src="@drawable/ic_add_a_photo_24px" />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/add_ingredient_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/add_ingredient_name_hint">

                <requestFocus />
            </EditText>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="8dp" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/add_ingredient_energy_density"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/add_ingredient_energy_density_hint"
                android:inputType="numberDecimal" />
            <android.support.v4.widget.Space
                android:layout_width="4dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/add_ingredient_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="false"
                tools:text="kcal / 100 g"/>
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="8dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_ingredient_categories_name"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/add_ingredient_categories_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            tools:listitem="@layout/add_ingredient_tag" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>