<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredients_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/ingredients_item"
        tools:showIn="@layout/ingredients_app_bar"
        tools:context=".activities.ingredients.view.IngredientsActivity">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/ingredients_no_ingredients_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_gravity="center"
        android:padding="24dp"
        android:text="@string/ingredients_no_ingredients_yet"
        android:visibility="gone"
        />
</FrameLayout>