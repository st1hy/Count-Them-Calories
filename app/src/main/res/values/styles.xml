<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorAppBackground</item>
        <item name="colorControlNormal">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Semitransparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="colorControlNormal">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.Ingredients">
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ActivityContent">
        <item name="android:foreground">?android:windowContentOverlay</item>
    </style>
    <style name="GraphColumn">
        <item name="gc_orientation">bottom_to_top</item>
        <item name="gc_color">@color/gcDefaultColor</item>
        <item name="gc_color_selected">@color/gcDefaultColorSelected</item>
        <item name="gc_progress">0.5</item>
        <item name="gc_mode">all</item>
        <item name="gc_line_width">2dip</item>
        <item name="gc_line_color">@color/gcLineColor</item>
        <item name="gc_legend_line_width">1dip</item>
        <item name="gc_legend_line_color">@color/gcLegendForegroundColor</item>
        <item name="gc_legend_line_overlay_color">@color/gcLegendBackgroundColor</item>
        <item name="gc_legend_separator_size">10dp</item>
        <item name="gc_legend_min_legend_line_space">25dp</item>
        <item name="gc_point_size">5dp</item>
        <item name="gc_point_color">@color/gcPointColor</item>
        <item name="gc_legend_text_size">12sp</item>
        <item name="gc_legend_text_point_color">@color/gcLegendTextColorWeight</item>
        <item name="gc_legend_text_value_color">@color/gcLegendTextColorCalorie</item>
        <item name="gc_legend_text_padding">4dp</item>
    </style>
    <style name="GraphColumn.Default">
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GraphRecycler">
        <item name="stackFromEnd">true</item>
        <item name="layoutManager">com.github.st1hy.countthemcalories.core.adapter.layoutmanager.HorizontalLayoutManager</item>
    </style>
    <style name="GraphRecycler.Default"/>
</resources>
