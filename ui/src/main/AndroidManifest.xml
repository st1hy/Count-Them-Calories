<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.github.st1hy.countthemcalories">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        tools:ignore="GoogleAppIndexingWarning"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:fullBackupContent="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.activities.overview.OverviewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ingredients.IngredientsActivity"
            android:label="@string/ingredients_title"
            android:theme="@style/AppTheme.NoActionBar.Ingredients"
            />
        <activity
            android:name=".ui.activities.addmeal.AddMealActivity"
            android:label="@string/add_meal_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateUnchanged"
            />
        <activity android:name=".ui.activities.addmeal.EditMealActivity"
            android:label="@string/edit_meal_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateUnchanged"
            />
        <activity android:name=".ui.activities.addmeal.CopyMealActivity"
            android:label="@string/copy_meal_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateUnchanged"
            />
        <activity
            android:name=".ui.activities.addingredient.AddIngredientActivity"
            android:label="@string/add_ingredient_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateUnchanged"
            />
        <activity
            android:name=".ui.activities.addingredient.EditIngredientActivity"
            android:label="@string/edit_ingredient_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateUnchanged"
            />
        <activity
            android:name=".ui.activities.settings.view.SettingsActivity"
            android:label="@string/settings_title"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".ui.activities.tags.view.TagsActivity"
            android:label="@string/tags_title"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".ui.activities.ingredientdetail.IngredientDetailActivity"
            android:label="@string/add_meal_title"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:theme="@style/AppTheme.Semitransparent"
            />
        <activity android:name=".ui.activities.mealdetail.MealDetailActivity"
            android:label="@string/meal_details_title"
            android:theme="@style/AppTheme.Semitransparent"
            />
    </application>
</manifest>
